<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">

    <ImageView
        android:id="@+id/img_anhbia"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/img_anhbia"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tenTruyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text1"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_tenTacGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="text2222"
            android:textColor="#DD6363"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_tenChuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="nam sinh"
            android:textColor="#4BFF37"
            android:textSize="16dp" />

    </LinearLayout>


</RelativeLayout>